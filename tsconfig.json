{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}